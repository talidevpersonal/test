import React, { useState } from "react";
import { Autocomplete, TextField, Box } from "@mui/material";

const SearchableDropdown = () => {
  const [value, setValue] = useState(null);

  // Example options
  const options = [
    { label: "Option 1", id: 1 },
    { label: "Option 2", id: 2 },
    { label: "Option 3", id: 3 },
    { label: "Option 4", id: 4 },
  ];

  return (
    <Box sx={{ width: 300 }}>
      <Autocomplete
        options={options}
        getOptionLabel={(option) => option.label}
        value={value}
        onChange={(event, newValue) => setValue(newValue)}
        renderInput={(params) => (
          <TextField {...params} label="Select an Option" variant="outlined" />
        )}
        renderOption={(props, option, { inputValue }) => {
          const matchesSearch = option.label
            .toLowerCase()
            .includes(inputValue.toLowerCase());
          return matchesSearch ? <li {...props}>{option.label}</li> : null;
        }}
        popupIcon={null} // Removes default dropdown arrow
        disableCloseOnSelect
        renderTags={() => null} // Removes tag display
        openOnFocus // Dropdown opens when focused
        inputValue="" // Removes user- Uncursor
   
