import React, { useState } from "react";
import { Autocomplete, TextField } from "@mui/material";

const SearchableDropdown = () => {
  const [value, setValue] = useState(null);

  // Example options
  const options = [
    { label: "Option 1", id: 1 },
    { label: "Option 2", id: 2 },
    { label: "Option 3", id: 3 },
    { label: "Option 4", id: 4 },
  ];

  return (
    <Autocomplete
      options={options} // Array of options
      getOptionLabel={(option) => option.label} // Define how options are displayed
      value={value} // Selected value
      onChange={(event, newValue) => setValue(newValue)} // Handle value change
      renderInput={(params) => (
        <TextField {...params} label="Searchable Dropdown" variant="outlined" />
      )}
      isOptionEqualToValue={(option, value) => option.id === value?.id} // Handle equality check
    />
  );
};

export default SearchableDropdown;
